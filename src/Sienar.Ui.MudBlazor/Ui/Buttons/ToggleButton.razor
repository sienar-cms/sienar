@namespace Sienar.Ui

<PrimaryButton
	Class="@Classes"
	OnClick="@OnClick">
	<MudIcon Icon="@(Active ? Icons.Material.Filled.CheckCircle : Icons.Material.Outlined.Circle)"/>

	@ChildContent
</PrimaryButton>

@code {

	[Parameter]
	public bool Active { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public EventCallback<MouseEventArgs> OnClick { get; set; }

	[Parameter]
	public string? Class { get; set; }

	private string Classes => $"d-flex justify-space-between {Class}";

}