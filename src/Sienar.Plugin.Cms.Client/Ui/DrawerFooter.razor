<AuthorizeView>
	<NotAuthorized>
		<MudButton
			Class="mud-width-full mb-2"
			Variant="Variant.Outlined"
			Color="Color.Secondary"
			Href="@DashboardUrls.Account.Register.Index">
			Register
		</MudButton>
		<MudButton
			Class="mud-width-full"
			Variant="Variant.Filled"
			Color="Color.Primary"
			Href="@DashboardUrls.Account.Login">
			Log in
		</MudButton>
	</NotAuthorized>

	<Authorized>
		<UserBadge MenuNames="@MenuNames"/>
	</Authorized>
</AuthorizeView>

@code {

	/// <summary>
	/// The names of the menus to render in the user settings menu
	/// </summary>
	protected IEnumerable<Enum> MenuNames =
	[
		SienarMenus.UserSettings,
		SienarMenus.UserLogout
	];

}