@attribute [AllowAnonymous]
@attribute [Route(DashboardUrls.Account.Register.Successful)]

<DocTitle Title="Registration successful"/>

<StatusPage Title="Registration successful">
	<MudText>
		Welcome, @Username! Please check for an email sent to @Email. Click the link in the welcome email to verify your account. You won't be able to log in until you've verified your account.
	</MudText>
</StatusPage>

@code {

	/// <summary>
	/// The newly-registered user's username
	/// </summary>
	[Parameter]
	[SupplyParameterFromQuery]
	public string? Username { get; set; }

	/// <summary>
	/// The newly-registered user's email address
	/// </summary>
	[Parameter]
	[SupplyParameterFromQuery]
	public string? Email { get; set; }

}